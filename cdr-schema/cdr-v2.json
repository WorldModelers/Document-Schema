{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "CDR Document",
  "type": "object",
  "properties": {
    "uri": {
      "description": "The RDF subject URI for this CDR document",
      "type": "string"
    },
    "source_uri": {
      "description": "Relative path to the extracted source file",
      "type": "string"
    },
    "document_id": {
      "description": "Unique document ID based on the MD5 sum of the source file's contents",
      "type": "string"
    },
    "timestamp": {
      "description": "Timestamp from epoch when this CDR document was created",
      "type": "string",
      "pattern" : "[0-9]{4}-[0-1][0-9]-[0-3][0-9]T[0-2][0-9]:[0-6][0-9]:[0-6][0-9]\\.[0-9]{3}Z"
    },
    "team": {
      "description": "Team which generated this CDR",
      "type": "string"
    },
    "content_type": {
      "description": "Detected MIME type of the source file",
      "type": "string"
    },
    "extracted_metadata": {
      "description": "Metadata pertaining to the extracted source file",
      "type": "object",
      "properties": {
        "CreationDate": {
          "type": "string",
          "pattern": "[0-9]{4}-[0-9]{2}-[0-9]{2}"
        },
        "ModDate": {
          "type": "string",
          "pattern": "[0-9]{4}-[0-9]{2}-[0-9]{2}"
        },
        "Author": {
          "type": "string"
        },
        "Title": {
          "type": "string"
        },
        "Description": {
          "type": "string"
        },
        "URL": {
          "type": "string"
        },
        "Type": {
          "type": "string"
        },
        "Classification": {
          "type": "string"
        },
        "Language": {
          "type": "string"
        },
        "Pages": {
          "type": "integer"
        },
        "Subject": {
          "type": "string"
        },
        "Creator": {
          "type": "string"
        },
        "Producer": {
          "type": "string"
        }
      }
    },
    "extracted_ntriples": {
      "description": "Reflection of the extracted_metadata in N-Triples format using the DataProvenance ODP",
      "type": "string"
    },
    "extracted_text": {
      "description": "Text extracted from the source document. TA1 offsets start at 0 here, beginning at the value of this field (after the opening double quote character)",
      "type": "string"
    },
    "extracted_numeric": {
      "description": "Numeric data extracted from a CSV/TSV or Excel document. Key names correlate to the sheet name with values matching the contents in TSV format.",
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "annotations": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "$ref": "#/definitions/text-annotation"
          },
          {
            "$ref": "#/definitions/dictionary-annotation"
          },
          {
            "$ref": "#/definitions/offset-tag-annotation"
          }
        ]
      }
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "definitions": {
    "text-annotation": {
      "$id": "text-annotation",
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "content": {
          "type": "string"
        },
        "type": {
          "type": "string"
        }
      }
    },
    "dictionary-annotation": {
      "$id": "dictionary-annotation",
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "content": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      }
    },
    "offset-tag-annotation": {
      "$id": "offset-tag-annotation",
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "content": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "offset_start": {
                "type": "integer"
              },
              "offset_end": {
                "type": "integer"
              },
              "value": {
                "type": "string"
              },
              "tag": {
                "type": "string"
              }
            },
            "required": [
              "offset_start",
              "offset_end",
              "tag"
            ]
          }
        }
      }
    }
  },
  "required": [
    "uri",
    "source_uri",
    "document_id",
    "timestamp",
    "team",
    "content_type",
    "extracted_metadata",
    "extracted_ntriples"
  ]
}